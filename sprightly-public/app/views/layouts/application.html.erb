<!DOCTYPE html PUBLIC '-//W3C//DTD XHTML 1.0 Strict//EN' 'http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd'>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>Sprightly<% if @page_title %> - <%= @page_title %><% end %></title>

    <link  rel="shortcut icon" type="image/x-icon" href="<%= image_path("favicon.ico") %>"/>

    <!-- jQuery framework and plugins -->
    <%= stylesheet_link_tag 'lib/jquery-ui','lib/jquery-ui.autocomplete','lib/jquery-treeview', 'lib/dijit','lib/jquery-contextmenu', 'lib/jquery-multiselect','lib/jquery-tooltip' %>
    <%= javascript_include_tag 'lib/jquery-1.3.2','lib/jquery-ui', 'lib/jquery-ajax-dialog.nla', 'lib/jquery-ajax-helper.nla','lib/jquery-ajax-form.nla','lib/jquery-ui.autocomplete','lib/jquery-treeview','lib/jquery-treeview.async','lib/jquery-contextmenu','lib/jquery-tablesorter', 'lib/jquery-multiselect', 'lib/jquery-tooltip','lib/jquery-popup'  %>

    <!-- RMS specific styles and javascript -->
    <%= javascript_include_tag 'rms/rms_common' %>
    <%= stylesheet_link_tag 'rms/rms_common','rms/rms_wizard' %>


    <% if  "SearchController".eql?(controller.class.name) %>
      <%= stylesheet_link_tag 'rms/rms_search', 'rms/rms_cool_box' %>
      <%= javascript_include_tag 'rms/rms_search'  %>
    <% end %>

    <% if  "UsersessionController".eql?(controller.class.name) %>
      <%= stylesheet_link_tag 'rms/rms_cool_box' %>
    <% end %>
    <% if  "AdminController".eql?(controller.class.name) %>
      <%= stylesheet_link_tag 'rms/rms_reporting' %>
    <% end %>

    <% if  @includeDojo then  %>
      <script type="text/javascript">var djConfig = {'parseOnLoad': false};</script>
      <script type="text/javascript" src="<%= javascript_path 'lib/dojo/dojo'  %>" parseOnLoad="false"></script>
    <% end  %>

    <!--[if IE 6]>
      <%= stylesheet_link_tag 'rms/rms_ie6.css' %>
    <![endif]-->

    <!--[if IE 7]>
      <%= stylesheet_link_tag 'rms/rms_ie7.css' %>
    <![endif]-->


    <script type="text/javascript">
      /* Create a global js variable that stores the image path
       *
       * This is used by javascript to dynamically load images in all
       * environments.
       *
       */
      var imagePath = "<%= image_path "" %>";
      if (imagePath.indexOf("?")>0) {
        imagePath = imagePath.substring(0, imagePath.indexOf("?"));
      }
    </script>

  </head>

  <body>
    <%= render :partial => 'common/header.html' %>
    <%= render :partial => 'common/breadcrumbs.html' %>

    <div id="main">
    <%= yield %>
    </div>
    <%= clear_fix %>
  </body>
</html>
