<!DOCTYPE html PUBLIC '-//W3C//DTD XHTML 1.0 Strict//EN' 'http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd'>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>Sprightly<% if @page_title %> - <%= @page_title %><% end %></title>

    <link rel="shortcut icon" href="/images/favicon.ico"/>
    <!-- jQuery framework and plugins -->
    <%= stylesheet_link_tag 'lib/jquery-ui','lib/jquery-ui.autocomplete','lib/jquery-treeview', 'lib/dijit','lib/jquery-contextmenu', 'lib/jquery-multiselect','lib/jquery-tooltip' %>
    <%= javascript_include_tag 'lib/jquery-1.3.2','lib/jquery-ui', 'lib/jquery-ajax-dialog.nla', 'lib/jquery-ajax-helper.nla','lib/jquery-ajax-form.nla','lib/jquery-ui.autocomplete','lib/jquery-treeview','lib/jquery-treeview.async','lib/jquery-contextmenu','lib/jquery-tablesorter', 'lib/jquery-multiselect', 'lib/jquery-tooltip'  %>

    <!-- RMS specific styles and javascript -->
    <%# javascript_include_tag 'rms/rms_common' %>
    <%= stylesheet_link_tag 'rms/rms_common','rms/rms_wizard','rms/rms_print' %>

    <!--[if IE 6]>
      <%= stylesheet_link_tag 'rms/rms_ie6.css' %>
    <![endif]-->

    <!--[if IE 7]>
      <%= stylesheet_link_tag 'rms/rms_ie7.css' %>
    <![endif]-->


    <script type="text/javascript">
      var imagePath = "<%= image_path "" %>";
      if (imagePath.indexOf("?")>0) {
        imagePath = imagePath.substring(0, imagePath.indexOf("?"));
      }
    </script>

    <%= stylesheet_link_tag('rms/rms_print')  %>
    <%= stylesheet_tag('rms/rms_print', :media=>"print")  %>

  </head>

  <body>
    <div class="print-actions">
      <button id="printButton" onclick="window.print()">Print Page</button>
      <button id="closeButton" class="secondary" onclick="window.close()">Close</button>
    </div>
    <div id="titleZone">      
      <div class="logo"><%= image_tag "sprightly-logo.gif", :alt=>"Sprightly Logo" %></div>
    </div>
    <div id="main">
    <%= yield %>
    </div>
    <%= clear_fix %>
  </body>
</html>
